<div class="login-container">
  <div class="login-card">
    <h1>Kanbino Login</h1>

    <%= form_with url: login_path, method: :post, class: "login-form" do |f| %>
      <div class="form-group">
        <%= f.label :username, "Username" %>
        <%= f.text_field :username, required: true, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, required: true, class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Login", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="login-help">
      <p><strong>Demo Accounts:</strong></p>
      <ul>
        <li>Users: user1, user2, user3 (password: password123)</li>
        <li>Admin: admin (password: admin123)</li>
      </ul>
    </div>
  </div>
</div>
