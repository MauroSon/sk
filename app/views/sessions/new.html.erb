<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h1>Bem-vindo</h1>
      <p>Faça login para continuar</p>
    </div>

    <% if flash[:error] %>
      <div class="alert alert-error">
        <%= flash[:error] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |f| %>
      <div class="form-group">
        <%= label_tag :username, "Usuário", class: "form-label" %>
        <%= text_field_tag :username, params[:username],
            class: "form-input",
            placeholder: "Digite seu usuário",
            required: true,
            autofocus: true %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Senha", class: "form-label" %>
        <%= password_field_tag :password, nil,
            class: "form-input",
            placeholder: "Digite sua senha",
            required: true %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Entrar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="login-footer">
      <p class="text-muted">
        <small>
          <strong>Credenciais de teste:</strong><br>
          Usuário: <code>admin</code> | Senha: <code>12345</code>
        </small>
      </p>
    </div>
  </div>
</div>
